{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Catalogue des Livres</h1>
    <div class="row g-4">
        {% for livre in livres %}
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="{{ asset('uploads/images/' ~ livre.image) }}" class="card-img-top" alt="Image de {{ livre.titre }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ livre.titre }}</h5>
                        <p class="card-text"><strong>Auteur :</strong> {{ livre.auteur }}</p>
                        <p class="card-text"><strong>Résumé :</strong> {{ livre.resume|slice(0, 100) ~ '...' }}</p>
                        <p class="card-text"><strong>Publié en :</strong> {{ livre.anneePublication }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
