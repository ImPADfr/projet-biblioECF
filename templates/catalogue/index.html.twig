{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Catalogue des Livres</h1>
    <div class="row g-4">
        {% for livre in livres %}
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="{{ asset('uploads/images/' ~ livre.image) }}" class="card-img-top" alt="Image de {{ livre.titre }}">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ livre.titre }}</h5>
                        <a href="{{ path('catalogue_detail_livre', { id: livre.id }) }}" class="btn btn-primary mt-4">Voir d√©tail</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
